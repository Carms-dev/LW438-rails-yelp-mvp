<div class="container">
    <div class="cards">
        <% @restaurants.each do |r| %>
            <div class="card my-3 p-4">
                <h2><%= link_to r.name, restaurant_path(r) %></h2>
                <p><%= r.address %></p>
                <p><%= r.phone_number %></p>
                <p><%= r.category.capitalize %></p>
            </div>
        <% end %>
    </div>
</div>